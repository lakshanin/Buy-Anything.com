.description {
	background: #2eaf7d;
	color: #f1f1f1;
	width: 110%;
	height: 70px;
	transition: .5s ease;
	opacity:0;
	color: white;
	font-size: 15px;
	padding: 10px;
	text-align: center;
	position: absolute;
	left: 15%;
	bottom: -15%;
}

.pic:hover{
	cursor: pointer;
	border: 3px solid #c1f6ed;
}

#anuttara:hover .description, #kavindya:hover .description , #lakshani:hover .description , #thivakaran:hover .description {
	opacity: 1;
}

/*Footer and Navigation bar */

.footer-dark {
	width: 100%;
	position: absolute;
    top: 120%;
	padding:50px 0;
	color:#f0f9ff;
	background-color:#282d32;
}

.footer-dark h3 {
  margin-top:0;
  margin-bottom:12px;
  font-weight:bold;
  font-size:16px;
}

.footer-dark ul {
  padding:0;
  list-style:none;
  line-height:1.6;
  font-size:14px;
  margin-bottom:0;
}

.footer-dark ul a {
  color:inherit;
  text-decoration:none;
  opacity:0.6;
}

.footer-dark ul a:hover {
  opacity:0.8;
}

@media (max-width:767px) {
  .footer-dark .item:not(.social) {
    text-align:center;
    padding-bottom:20px;
  }
}

.footer-dark .item.text {
  margin-bottom:36px;
}

@media (max-width:767px) {
  .footer-dark .item.text {
    margin-bottom:0;
  }
}

.footer-dark .item.text p {
  opacity:0.6;
  margin-bottom:0;
}

.footer-dark .item.social {
  text-align:center;
}

@media (max-width:991px) {
  .footer-dark .item.social {
    text-align:center;
    margin-top:20px;
  }
}

.footer-dark .item.social > a {
  font-size:20px;
  width:36px;
  height:36px;
  line-height:36px;
  display:inline-block;
  text-align:center;
  border-radius:50%;
  box-shadow:0 0 0 1px rgba(255,255,255,0.4);
  margin:0 8px;
  color:#fff;
  opacity:0.75;
}

.footer-dark .item.social > a:hover {
  opacity:0.9;
}

.footer-dark .copyright {
  text-align:center;
  padding-top:24px;
  opacity:0.3;
  font-size:13px;
  margin-bottom:0;
}

.logo {
	display: inline-block;
    vertical-align: middle;
    width: 110px;
    height: 110px;
	margin-top: -40px;
}

.navleft {
  width: 100%;  
  height: 80px;
  overflow: hidden;
  background-color: #1d1a21;
  vertical-align: middle;
}

.navleft a {
  color: #f2f2f2;
  text-align: center;
  padding: 16px 16px;
  padding-top: 25px;
  text-decoration: none;
  font-size: 17px;
  display: inline-block;
  vertical-align: middle;
  height: 80px;
  transition-duration: 0.4s;
}

.navleft a:hover {

  background-color: #c1f6ed;
  color: black;
}

.navleft a.active {
  background-color: #2eaf7d;
  color: white;
  font-weight: bold;
  text-decoration: underline;
 
}

.logohover a:hover{
  font-weight: bold;
  text-decoration: underline;
}

.navbtn {
  font-size: 1rem;
  margin-top: 20px;
  margin-bottom: 0.4rem;
  margin-left: 1rem;
  margin-right: 1rem;
  padding: 8px 0;
  border-radius: 5px;
  outline: none;
  border: none;
  width: 8%;
  background: #2eaf7d;
  color: #fff;
  cursor: pointer;
}

.navbtn:hover {
  background: #c1f6ed;
  color: black;
}

