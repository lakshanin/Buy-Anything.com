@import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
.video{
padding:0;
position: absolute;
opacity: 10;
top:0;
right:0;
z-index:-1;
}

@media (min-aspect-ratio:16/9){
.video{
width:100%;
height:125%;
}
}

@media (max-aspect-ratio:16/9){
.video{
width:auto;
height:100%;
}
}

@keyframes Slide_up{0%{
transform: translateY(250px);
}100%{
transform: translateY(0);
}
}
